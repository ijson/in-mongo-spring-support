<html>
<head>
    <title>新建/编辑 ${name}</title>
    <% include("base/meta.html"){} %>

</head>
<body>
<div class="layui-fluid">
    <div class="layui-row layui-col-space15">
        <div class="layui-col-md12">
            <div class="layui-card">
                <div class="layui-card-body ">
                    <fieldset class="layui-elem-field layui-field-title" style="margin-top: 20px;">
                        <legend>新建/编辑 ${name}</legend>
                    </fieldset>
                </div>
                <div class="layui-card-body ">
                    <form class="layui-form layui-form-pane" action="" id="editForm">
                        <input type="hidden" name="id" id="id" value="${editData.id!}">

                        <%
                            for(col in columns){
                                print("\t<div class=\"layui-form-item\">");
                                print("\t<input type=\"text\" name=\"cname\" id=\"cname\" lay-verify=\"cname\" autocomplete=\"off\"");
                                print("\t\t\tplaceholder=\"请输入中文描述\"");
                                print("\tclass=\"layui-input\" value=\"&#36{editData.cname!}\">");
                                print("\t</div>");
                            }
                         %>


                        <div class="layui-form-item">
                            <button type="button" class="layui-btn layui-btn-normal" lay-submit lay-filter="save">保存
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>


    layui.use(['form', 'layer', 'layedit'], function () {
        $ = layui.jquery;
        var form = layui.form;


        //自定义验证规则
        form.verify({
            cname: function (value) {
                if (value === undefined || value === '' || value.length === 0) {
                    return '中文描述不能为空';
                }
            },
            code: function (value) {
                if (value === undefined || value === '' || value.length === 0) {
                    return '代码不能为空';
                }
            }
        });

        //监听提交
        form.on('submit(save)', function (data) {
            debugger
            $.ajax({
                cache: false,
                type: "POST",
                contentType: 'application/json',
                url: "/${lowerFirstName}/addup",
                data: JSON.stringify(data.field),
                async: false,
                success: function (data) {
                    if (data.code === 0) {
                        layer.msg(data.message, {
                            time: 2000
                        });

                        self.setTimeout(function () {
                            $("#editForm")[0].reset();
                            layui.form.render();
                            $("#cname").val('');
                            $("#code").val('');
                            try {
                                parent.layui.table.reload('${lowerFirstName}List');
                            } catch (err) {
                            }
                            var index = parent.layer.getFrameIndex(window.name);
                            parent.layer.close(index);
                        }, 2000);


                    } else {
                        layer.msg(data.message);

                    }
                },
                error: function (data) {
                    layer.msg(data.message);
                }
            });

            return false;
        });
    });
</script>

</body>
</html>